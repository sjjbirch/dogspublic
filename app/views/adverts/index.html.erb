<h1>Dogs for sale</h1>

<div class="container">
<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th>Ad Title</th>
            <th>Ad Description</th>
            <th>Price</th>
            <th>Advertising account</th>
        </tr>
    </thead>

    <tbody>
        <% @adverts.each do |advert| %>
            <tr>
                <td><%= advert.title %></td>
                <td><%= advert.description %></td>
                <td> <%= "Placeholder" %> </td>
                <td> <%= advert.dog.user.email %> </td>
                <td><%= link_to 'View Ad', dog_advert_path(advert.dog, advert),
                type: "button", class: "btn btn-primary" %></td>
                <td><%= link_to 'Buy Now', buy_path(id: advert.id),
                type: "button", class: "btn btn-success" %></td>
                <td> Posted <%= time_ago_in_words(advert.created_at) %> ago. </td>
            </tr>
        <% end %>
    </tbody>

</table>
