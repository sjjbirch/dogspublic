<h1>User List</h1>

<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>User Email</th>
                <th>Purchases</th>
                <th>Sales</th>
                <th>Last Active</th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.buyer_payments.count %></td>
                    <td><%= user.seller_payments.count %></td>
                    <td><%= user.last_sign_in_at %></td>
                </tr>
            <% end %>
        </tbody>

    </table>
</div>