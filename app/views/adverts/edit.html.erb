<h1>Edit <%= @advert.dog.rname %></h1>
<p>new ad thing</p>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: [@advert.dog, @advert], local: true) do |f| %>
        
            <%= f.label :title, "Ad Title" %>
            <%= f.text_field :title, class: 'form-control' %>

            <%= f.label :description, "Ad Description" %>
            <%= f.text_field :description, class: 'form-control' %>

            <%= f.submit "Update Ad", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
