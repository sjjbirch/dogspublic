<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Real Name</th>
                <th>Call Name</th>
                <th>DOB</th>
                <th>Breeder</th>
                <th>Handler</th>
                <th>Sex</th>
                <th>Litter</th>
                <th>Associated Account</th>
            </tr>
        </thead>

        <tbody>
            <% @dogs.each do |dog| %>
                <tr>
                    <td><%= dog.rname %></td>
                    <td><%= dog.cname %></td>
                    <td><%= dog.dob %></td>
                    <td><%= dog.breeder %></td>
                    <td><%= dog.handler %></td>
                    <td><%= dog.sex %></td>
                    <td><%= "litter placeholder" %></td>
                    <td><%= dog.user.email %></td>
                    <%# remove hover and active effects on buttons at some point %>
                    <%# if has attached advert then show, if no attached then new %>
                    <% if dog.advert.nil? %>
                        <td>Not for sale.</td>
                    <% else %>
                        <td><%= link_to 'View Ad', dog_advert_path(dog, dog.advert),
                        # <td><%= link_to 'View Ad', "#", method: :get, 
                        type: "button", class: "btn btn-primary" %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>